{
  "mcpServers": {
    "supabase": {
      "command": "pnpm",
      "args": ["dlx", "@modelcontextprotocol/server-supabase"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_KEY}"
      }
    },
    "notion": {
      "command": "pnpm",
      "args": ["dlx", "@modelcontextprotocol/server-notion"],
      "env": {
        "NOTION_API_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "google-workspace": {
      "command": "pnpm",
      "args": ["dlx", "@modelcontextprotocol/server-google-workspace"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN}"
      }
    },
    "vercel": {
      "command": "pnpm",
      "args": ["dlx", "@modelcontextprotocol/server-vercel"],
      "env": {
        "VERCEL_API_TOKEN": "${VERCEL_API_TOKEN}"
      }
    },
    "test-sprite": {
      "command": "pnpm",
      "args": ["dlx", "@testsprite/testsprite-mcp@latest"],
      "env": {
        "API_KEY": "${TESTSPRITE_API_KEY}"
      }
    },
    "hostinger": {
      "command": "pnpm",
      "args": ["dlx", "hostinger-api-mcp@latest"],
      "env": {
        "API_TOKEN": "${HOSTINGER_API_KEY}"
      }
    },
    "pinecone": {
      "command": "pnpm",
      "args": ["dlx", "@pinecone-database/mcp"],
      "env": {
        "PINECONE_API_KEY": "${PINECONE_API_KEY}"
      }
    },
    "context7": {
      "command": "pnpm",
      "args": ["dlx", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"]
    },
    "sequential-thinking": {
      "command": "pnpm",
      "args": ["dlx", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}
