# Aureon Cortex - Environment Configuration
# Copy this file to .env.cortex and fill in your values

# Core Application
APP_ENV=development
PORT=8000

# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# AI Intelligence
GEMINI_API_KEY=your-gemini-key
VITE_GEMINI_KEY_POOL=["key1","key2","key3","key4"]
OPENAI_API_KEY=your-openai-key
MISTRAL_API_KEY=your-mistral-key
GROQ_API_KEY=your-groq-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token

# WhatsApp (Optional)
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_API_TOKEN=your-api-token
WHATSAPP_PHONE_ID=your-phone-id

# n8n Integration
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook
N8N_API_KEY=your-n8n-api-key

# Notion
NOTION_TOKEN=your-notion-token

# Google Workspace
GOOGLE_APPLICATION_CREDENTIALS=/app/aureon-google-creds.json

# Infrastructure
HOSTINGER_API_KEY=your-hostinger-key

# Webhook Domain (Production)
DOMAIN=https://cortex.yourdomain.com
